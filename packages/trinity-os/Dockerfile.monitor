FROM python:3.12-slim

# 모니터링용 경량 이미지
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY scripts/kingdom_health_report.py scripts/
COPY scripts/kingdom_problem_detector.py scripts/

CMD ["python3", "scripts/kingdom_health_report.py"]