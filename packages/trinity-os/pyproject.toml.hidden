[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "trinity-os"
version = "1.0.0"
description = "TRINITY-OS: AFO 왕국의 통합 자동화 운영체제"
readme = "README.md"
license = {file = "LICENSE"}
requires-python = ">=3.12"
classifiers = [
    "Development Status :: 5 - Production/Stable",
    "Intended Audience :: Developers",
    "License :: Other/Proprietary License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.12",
    "Topic :: System :: Systems Administration",
    "Topic :: Utilities",
]
dependencies = [
    "python-json-logger>=2.0.7",
    "requests>=2.31.0",
    "psutil>=5.9.6",
    "langchain>=1.1.0",
    "langgraph>=1.0.4",
    "mcp>=1.22.0",
    "fastapi>=0.123.0",
    "uvicorn[standard]>=0.30.0",
    "pydantic>=2.12.0",
    # "cupy>=12.0.0; platform_system != 'Darwin' or platform_machine != 'arm64'", # Removed to fix Docker build (CPU only)
    "numpy>=2.0.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "ruff>=0.1.0",
    "mypy>=1.0.0",
    "pytest-cov>=4.1.0",
    "pytest-asyncio>=0.23.0",
]
docker = [
    "docker>=6.0.0",
]
all = [
    "crewai>=1.6.0",
    "chromadb",
    "neo4j>=5.20.0",
]

[project.scripts]
trinity-os = "run_trinity_os:main"
sixxon = "trinity_os.cli.sixxon:main"

[tool.ruff]
target-version = "py312"
line-length = 120

[tool.ruff.lint]
select = [
    "E",  # pycodestyle errors
    "W",  # pycodestyle warnings
    "F",  # pyflakes
    "I",  # isort
    "B",  # flake8-bugbear
    "C4", # flake8-comprehensions
    "UP", # pyupgrade
]
ignore = [
    "E501", # line too long, handled by formatter
    "B008", # do not perform function calls in argument defaults
    "C901", # too complex
]

[tool.ruff.lint.isort]
known-first-party = ["trinity_os"]

[tool.mypy]
python_version = "3.12"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true
disallow_incomplete_defs = true
check_untyped_defs = true
disallow_untyped_decorators = true
no_implicit_optional = true
warn_redundant_casts = true
warn_unused_ignores = true
warn_no_return = true
warn_unreachable = true
strict_equality = true

[[tool.mypy.overrides]]
module = [
    "psutil.*",
]
ignore_missing_imports = true

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]
addopts = [
    "--strict-markers",
    "--strict-config",
    "--verbose",
    "--tb=short",
]
