{
  "antigravity": {
    "enabled": true,
    "version": "1.0.0",
    "description": "AFO 왕국 AntiGravity 설정 - 코드 품질 및 성능 향상",
    "settings": {
      "code_quality": {
        "auto_format": true,
        "type_check": true,
        "lint_on_save": true,
        "tools": {
          "ruff": {
            "enabled": true,
            "auto_fix": true,
            "line_length": 100
          },
          "mypy": {
            "enabled": true,
            "ignore_missing_imports": true,
            "show_error_codes": true
          },
          "pytest": {
            "enabled": true,
            "auto_run": false
          }
        }
      },
      "performance": {
        "cache": {
          "enabled": true,
          "ttl": 300
        },
        "async": {
          "enabled": true
        }
      },
      "monitoring": {
        "metrics": {
          "enabled": true,
          "interval": 60
        }
      },
      "dev_tools": {
        "hot_reload": true,
        "debug_logging": false,
        "auto_generate_tests": false,
        "auto_generate_docs": false
      }
    },
    "workflows": {
      "on_save": [
        "format_code",
        "organize_imports",
        "fix_lint_issues"
      ],
      "on_commit": [
        "run_tests",
        "type_check",
        "lint_check"
      ]
    }
  }
}

