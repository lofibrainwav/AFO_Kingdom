#!/usr/bin/env bash
# AFO Kingdom Golden Path CLI
# Usage: ./afo <command>
# Commands: seal, trinity, drift, protect, status, help

set -euo pipefail

# Fail-Fast: ERR trap for immediate failure notification
trap 'echo -e "\033[0;31m‚ùå afo failed at line $LINENO (exit $?)\033[0m"; exit 1' ERR

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SCRIPTS_DIR="$SCRIPT_DIR/scripts"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

banner() {
    echo -e "${BLUE}"
    echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
    echo "‚ïë       AFO Kingdom CLI v1.0            ‚ïë"
    echo "‚ïë   ÁúûÂñÑÁæéÂ≠ùÊ∞∏ - Golden Path            ‚ïë"
    echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
    echo -e "${NC}"
}

cmd_seal() {
    echo -e "${GREEN}üîê SSOT Seal${NC}"
    "$SCRIPTS_DIR/ssot_seal.sh" "$@"
}

cmd_trinity() {
    echo -e "${GREEN}üèõÔ∏è Trinity Check${NC}"
    "$SCRIPTS_DIR/trinity_check.sh" "$@"
}

cmd_drift() {
    echo -e "${GREEN}üîç Drift Monitor${NC}"
    "$SCRIPTS_DIR/ssot_drift_monitor.sh" "$@"
}

cmd_protect() {
    echo -e "${GREEN}üõ°Ô∏è Branch Protection${NC}"
    "$SCRIPTS_DIR/enforce_branch_protection.sh" "$@"
}

cmd_status() {
    echo -e "${GREEN}üìä Kingdom Status${NC}"
    echo ""
    echo "Git:"
    git status -sb
    echo ""
    echo "Trinity:"
    curl -sS http://localhost:8010/health 2>/dev/null | python3 -c "
import sys,json
try:
    d=json.load(sys.stdin)
    print(f'  Score: {d.get(\"trinity\",{}).get(\"trinity_score\", \"N/A\")}')
    print(f'  Organs: {d.get(\"healthy_organs\", \"?\")}/{d.get(\"total_organs\", \"?\")}')
    print(f'  Status: {d.get(\"status\", \"unknown\")}')
except:
    print('  Server offline')
" || echo "  Server offline"
}

cmd_help() {
    banner
    echo "Commands:"
    echo "  seal      - Generate SSOT evidence bundle"
    echo "  trinity   - Check Trinity Score (‚â•90%)"
    echo "  drift     - Monitor configuration drift"
    echo "  protect   - Enforce branch protection"
    echo "  status    - Show kingdom status"
    echo "  alert     - Send notification (info|warning|error)"
    echo "  release   - Create release tag (vX.Y.Z)"
    echo "  dashboard - Show full status card"
    echo "  evolve    - Run DGM evolution cycle [--dry-run]"
    echo "  debug     - Integrated debug & ratchet [--seal]"
    echo "  help      - Show this help"
    echo ""
    echo "Examples:"
    echo "  ./afo seal"
    echo "  ./afo trinity"
    echo "  ./afo status"
    echo "  ./afo alert warning 'Title' 'Message'"
    echo "  ./afo release v1.0.0"
    echo "  ./afo dashboard"
    echo "  ./afo evolve --dry-run"
}

cmd_alert() {
    echo -e "${YELLOW}üì¢ Alert System${NC}"
    "$SCRIPTS_DIR/afo_alert.sh" "$@"
}

cmd_release() {
    echo -e "${YELLOW}üöÄ Release System${NC}"
    "$SCRIPTS_DIR/afo_release_tag.sh" "$@"
}

cmd_dashboard() {
    "$SCRIPTS_DIR/afo_dashboard.sh"
}

cmd_debug() {
    echo -e "${BLUE}üõ°Ô∏è Integrated Debugging${NC}"
    "$SCRIPTS_DIR/afo_debug.sh" "$@"
}

cmd_evolve() {
    echo -e "${YELLOW}üß¨ DGM Evolution Cycle${NC}"
    "$SCRIPTS_DIR/afo_dgm_evolve.sh" "$@"
}

# Main
case "${1:-help}" in
    seal)
        shift || true
        cmd_seal "$@"
        ;;
    trinity)
        shift || true
        cmd_trinity "$@"
        ;;
    drift)
        shift || true
        cmd_drift "$@"
        ;;
    protect)
        shift || true
        cmd_protect "$@"
        ;;
    status)
        cmd_status
        ;;
    alert)
        shift || true
        cmd_alert "$@"
        ;;
    release)
        shift || true
        cmd_release "$@"
        ;;
    dashboard)
        cmd_dashboard
        ;;
    evolve)
        shift || true
        cmd_evolve "$@"
        ;;
    debug)
        shift || true
        cmd_debug "$@"
        ;;
    help|--help|-h)
        cmd_help
        ;;
    *)
        echo -e "${RED}Unknown command: $1${NC}"
        cmd_help
        exit 1
        ;;
esac

