{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Knowledge graph memory for persistent context"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}"
      ],
      "description": "File system access for AFO Kingdom"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Step-by-step reasoning"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Web search via Brave"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Library documentation context injection"
    },
    "afo-ultimate-mcp": {
      "command": "python3.12",
      "args": [
        "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/trinity-os/trinity_os/servers/afo_ultimate_mcp_server.py"
      ],
      "env": {
        "WORKSPACE_ROOT": "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}",
        "PYTHONPATH": "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/afo-core:${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/trinity-os"
      },
      "description": "AFO Ultimate MCP Server - Universal connector with Trinity Score evaluation (眞善美孝永). Tools: shell_execute, read_file, write_file, kingdom_health, calculate_trinity_score, verify_fact, cupy_weighted_sum"
    },
    "afo-skills-mcp": {
      "command": "python3.12",
      "args": [
        "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/trinity-os/trinity_os/servers/afo_skills_mcp.py"
      ],
      "env": {
        "WORKSPACE_ROOT": "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}",
        "PYTHONPATH": "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/afo-core:${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/trinity-os"
      },
      "description": "AFO Skills MCP Server - CuPy acceleration & fact verification with Trinity Score evaluation. Tools: cupy_weighted_sum, verify_fact"
    },
    "trinity-score-mcp": {
      "command": "python3.12",
      "args": [
        "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/trinity-os/trinity_os/servers/trinity_score_mcp.py"
      ],
      "env": {
        "WORKSPACE_ROOT": "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}",
        "PYTHONPATH": "${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/afo-core:${WORKSPACE_ROOT:-/Users/brnestrm/AFO_Kingdom}/packages/trinity-os"
      },
      "description": "Trinity Score MCP Server - Calculate 眞善美孝永 5-pillar scores with GPU acceleration (CuPy)"
    }
  },
  "skills": {
    "calculate_trinity_score": {
      "endpoint": "${SOUL_ENGINE_URL:-http://localhost:8010}/api/trinity/calculate",
      "method": "POST",
      "description": "Calculate 眞善美孝永 5-pillar Trinity Score (SSOT weights: 35/35/20/8/2)"
    },
    "health_check": {
      "endpoint": "${SOUL_ENGINE_URL:-http://localhost:8010}/health",
      "method": "GET",
      "description": "Check system health and get real-time Trinity metrics"
    },
    "chancellor_invoke": {
      "endpoint": "${SOUL_ENGINE_URL:-http://localhost:8010}/chancellor/invoke",
      "method": "POST",
      "description": "Invoke Chancellor with 3 strategists (제갈량/사마의/주유)"
    }
  }
}
