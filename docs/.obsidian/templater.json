{
  "command_timeout": 5,
  "templates_folder": "_templates",
  "templates_pairs": [
    ["", "_templates/project_doc.md"],
    ["project", "_templates/project_doc.md"],
    ["component", "_templates/system_component.md"],
    ["api", "_templates/api_endpoint.md"],
    ["dataview", "_templates/dataview_queries.md"],
    ["collaboration", "_templates/collaboration_guide.md"],
    ["ai", "_templates/ai_integration_guide.md"]
  ],
  "syntax_highlighting": true,
  "enabled_templates_hotkeys": [],
  "startup_templates": [],
  "trigger_on_file_creation": true,
  "auto_jump_to_cursor": true,
  "enable_system_commands": true,
  "shell_path": "",
  "user_scripts_folder": "_templates/scripts",
  "enable_folder_templates": true,
  "folder_templates": [
    {
      "folder": "docs/projects",
      "template": "_templates/project_doc.md"
    },
    {
      "folder": "docs/components",
      "template": "_templates/system_component.md"
    },
    {
      "folder": "docs/api",
      "template": "_templates/api_endpoint.md"
    }
  ],
  "syntax_highlighting_mobile": true,
  "date_format": "YYYY-MM-DD",
  "time_format": "HH:mm",
  "locale": "ko"
}
